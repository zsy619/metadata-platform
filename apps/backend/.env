# 应用基本配置
APP_NAME=metadata-platform
APP_MODE=debug
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# 元数据数据库配置
METADATA_DB.TYPE=PostgreSQL
METADATA_DB.HOST=localhost
METADATA_DB.PORT=5432
METADATA_DB.USER=postgres
METADATA_DB.PASSWORD=123456
METADATA_DB.NAME=metadata_platform
METADATA_DB.MAX_IDLE_CONNS=10
METADATA_DB.MAX_OPEN_CONNS=100
METADATA_DB.SSL_MODE=disable

# 用户管理数据库配置
USER_DB.TYPE=PostgreSQL
USER_DB.HOST=localhost
USER_DB.PORT=5432
USER_DB.USER=postgres
USER_DB.PASSWORD=123456
USER_DB.NAME=metadata_sso
USER_DB.MAX_IDLE_CONNS=10
USER_DB.MAX_OPEN_CONNS=100
USER_DB.SSL_MODE=disable

# 审核日志数据库配置
AUDIT_DB.TYPE=PostgreSQL
AUDIT_DB.HOST=localhost
AUDIT_DB.PORT=5432
AUDIT_DB.USER=postgres
AUDIT_DB.PASSWORD=123456
AUDIT_DB.NAME=metadata_audit
AUDIT_DB.MAX_IDLE_CONNS=10
AUDIT_DB.MAX_OPEN_CONNS=100
AUDIT_DB.SSL_MODE=disable

# JWT配置
JWT_SECRET=your-secret-key
JWT_EXPIRE_HOURS=24

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=/tmp/metadata_platform/app.log
